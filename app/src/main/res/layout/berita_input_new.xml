<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
    android:id="@+id/berita_detail_judul"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:fontFamily="@font/source_sans_pro"
    android:text="@string/judul_berita_detail_placeholder"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold" />
    <EditText
        android:id="@+id/judul_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/source_sans_pro"
        android:inputType="textMultiLine"
        android:hint="Judul Berita"
        android:textSize="12sp"
        android:textStyle="normal" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:gravity="right"
        android:layout_marginTop="20dp">
        <Button
            android:id="@+id/button_input_edit_berita"
            android:layout_width="85sp"
            android:layout_height="20sp"
            android:background="@drawable/button"
            android:text="Simpan"
            android:textColor="@color/white"
            android:textSize="7sp"/>
    </LinearLayout>
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginTop="10dp"
        android:orientation="horizontal">

    <TextView
        android:id="@+id/penulis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="10sp"
        android:gravity="center"
        android:fontFamily="@font/source_sans_pro"
        android:text="Ditulis oleh"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/tanggal_berita_detail"
        android:gravity="right"
        android:fontFamily="@font/source_sans_pro"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:text="Tanggal Berita"
        android:textColor="#000000"
        android:textSize="11sp"
        android:textStyle="normal"/>

    <EditText
        android:id="@+id/input_tanggal_berita"
        android:gravity="right"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="@font/source_sans_pro"
        android:inputType="date"
        android:hint="YYYY-MM-DD"
        android:textSize="11sp"
        android:textStyle="normal" />
    </LinearLayout>

    <EditText
        android:id="@+id/input_berita"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10sp"
        android:layout_marginBottom="10sp"
        android:fontFamily="@font/source_sans_pro"
        android:inputType="textMultiLine"
        android:hint="Masukkan Berita disini"
        android:textSize="12sp"
        android:textStyle="normal" />
</LinearLayout>
