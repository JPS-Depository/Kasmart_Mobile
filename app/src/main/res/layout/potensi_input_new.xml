<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardBackgroundColor="@color/white">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/header_shu">
                <TextView
                    android:id="@+id/nama_daerah_potensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="10sp"
                    android:text="Nama Daerah"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textSize="14sp" />
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@id/spinner_1"
            android:layout_marginBottom="10sp"
            android:weightSum="1">
            <Spinner
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_weight="0.5"
                android:id="@+id/spinner_keldes">
            </Spinner>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Sumber Daya Alam :"/>
                <EditText
                    android:id="@+id/input_sda_potensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masalah_pendamping_text_masalah"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:hint="Masukkan Sumber Daya Alam"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:textColor="@color/black"
                    android:text="Sumber Daya Manusia :"/>
                <EditText
                    android:id="@+id/input_sdm_potensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masalah_pendamping_text_masalah"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:hint="Masukkan Sumber Daya Alam"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginEnd="5sp"
                    android:textColor="@color/black"
                    android:text="Aset Desa :"/>
                <EditText
                    android:id="@+id/input_aset_desa_potensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masalah_pendamping_text_masalah"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:hint="Masukkan Sumber Aset Desa"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:fontFamily="@font/source_sans_pro"
                    android:textStyle="bold"
                    android:textSize="11sp"
                    android:layout_marginEnd="5sp"
                    android:textColor="@color/black"
                    android:text="Budaya dan Kesenian:"/>
                <EditText
                    android:id="@+id/input_budaya_potensi"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_below="@id/masalah_pendamping_text_masalah"
                    android:layout_marginBottom="10sp"
                    android:fontFamily="@font/source_sans_pro"
                    android:hint="Masukkan Budaya dan Kesenian"
                    android:textSize="11sp"
                    android:textStyle="normal" />
            </LinearLayout>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="20sp"
            android:orientation="horizontal"
            android:layout_marginTop="5sp"
            android:gravity="right">
            <Button
                android:id="@+id/button_input_edit_potensi"
                android:layout_width="85sp"
                android:layout_height="20sp"
                android:layout_marginRight="5sp"
                android:background="@drawable/button"
                android:text="Simpan"
                android:textColor="@color/white"
                android:textSize="7sp" />
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>