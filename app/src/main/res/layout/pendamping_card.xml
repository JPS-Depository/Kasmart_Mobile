<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="16dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:id="@+id/header_pendamping">

            <ImageView
                android:layout_width="89dp"
                android:layout_height="89dp"
                android:layout_marginRight="12dp"
                android:background="@mipmap/ic_launcher" />

            <LinearLayout
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginBottom="3dp">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nama_pendamping_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:text="Nama Pendamping"
                        android:textColor="#000"
                        android:layout_weight="1"
                        android:textSize="16sp"
                        android:textStyle="bold" />

                    <TextView
                        android:id="@+id/nomor_pendamping"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:fontFamily="@font/source_sans_pro"
                        android:gravity="center"
                        android:text="Telepon"
                        android:textColor="#000"
                        android:textSize="10sp" />
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:orientation="vertical">
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:id="@+id/jabatan_header_pendamping"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="Jabatan" />
                        <TextView
                            android:id="@+id/no_reg_header_pendamping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:text="No.Reg"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="Alamat Tugas :"/>
                        <TextView
                            android:id="@+id/alamat_tugas_header_pendamping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textSize="11.7sp"
                            android:text="Alamat Tugas"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="Alamat Pribadi :"/>
                        <TextView
                            android:id="@+id/alamat_pribadi_header_pendamping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textSize="11.7sp"
                            android:text="Alamat Tugas"/>
                    </LinearLayout>
                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content">
                        <TextView
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:layout_marginEnd="5sp"
                            android:fontFamily="@font/source_sans_pro"
                            android:textStyle="bold"
                            android:textSize="11sp"
                            android:textColor="@color/black"
                            android:text="Bidang :"/>
                        <TextView
                            android:id="@+id/bidang_header_pendamping"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:fontFamily="@font/source_sans_pro"
                            android:textSize="11.7sp"
                            android:text="Bidang"/>
                    </LinearLayout>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/extended_pendamping"
            android:layout_marginTop="10sp">
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginEnd="5sp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:gravity="right"
                        android:textColor="@color/black"
                        android:text="Email :"/>
                    <TextView
                        android:id="@+id/email_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="Email"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:text="No. KTP :"/>
                    <TextView
                        android:id="@+id/ktp_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="KTP"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/black"
                        android:gravity="right"
                        android:text="No.BPJS :"/>
                    <TextView
                        android:id="@+id/bpjs_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="BPJS"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/black"
                        android:text="Nomor Rekening :"/>
                    <TextView
                        android:id="@+id/nomor_rekening_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="Nomor Rekening"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="5sp"
                        android:text="NPWP :"/>
                    <TextView
                        android:id="@+id/npwp_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="NPWP"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/black"
                        android:text="Tanggal Lahir :"/>
                    <TextView
                        android:id="@+id/tanggal_lahir_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11.7sp"
                        android:text="Tanggal Lahir"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="5sp"
                        android:text="Status Pernikahan :"/>
                    <TextView
                        android:id="@+id/status_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="Status Pernihakan"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:layout_marginEnd="5sp"
                        android:textColor="@color/black"
                        android:text="Jenis Kelamin :"/>
                    <TextView
                        android:id="@+id/jenis_kelamin_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11.7sp"
                        android:text="Jenis Kelamin"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textStyle="bold"
                        android:textSize="11sp"
                        android:textColor="@color/black"
                        android:layout_marginEnd="5sp"
                        android:text="Agama :"/>
                    <TextView
                        android:id="@+id/agama_pendamping"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:text="Agama"/>
                </LinearLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="25sp"
                        android:gravity="right">
                        <Button
                            android:id="@+id/button_delete_pendamping"
                            android:layout_width="40sp"
                            android:layout_height="50sp"
                            android:layout_toRightOf="@id/button_edit_pendamping"
                            android:background="#D9534F"
                            android:text="Delete"
                            android:textColor="@color/white"
                            android:textSize="7sp" />
                        <Button
                            android:id="@+id/button_edit_pendamping"
                            android:layout_width="40sp"
                            android:layout_height="match_parent"
                            android:layout_marginRight="5sp"
                            android:background="@drawable/button"
                            android:text="Edit"
                            android:textColor="@color/white"
                            android:textSize="7sp" />
                    </RelativeLayout>
                </LinearLayout>
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>