<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:orientation="vertical"
        android:background="@drawable/event_card"
        android:layout_marginTop="80dp"
        android:layout_marginRight="16dp"
        android:layout_marginLeft="16dp"
        android:elevation="3dp"
        android:padding="16dp">
        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <ImageView
                android:layout_width="89dp"
                android:layout_height="match_parent"
                android:layout_marginRight="12dp"
                android:background="@mipmap/ic_launcher" />
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="fill_parent"
                android:layout_height="match_parent">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/nama_desa"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="16sp"
                        android:textStyle="bold"
                        android:textColor="#000"
                        android:text="Nama Desa"/>
                    <TextView
                        android:id="@+id/nama_kades"
                        android:gravity="right"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="8dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="10sp"
                        android:textColor="#000"
                        android:text="Nama Kades"/>
                </LinearLayout>
                <TableLayout
                    android:layout_width="match_parent"
                    android:layout_height="40dp"
                    android:background="@color/white">
                    <TableRow
                        android:background="@color/colorPrimary">
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="KK"
                            android:textSize="8dp"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Dusun"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RT"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="RW"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="Suku"
                            android:layout_weight="5"
                            android:textColor="@color/white"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                    </TableRow>
                    <TableRow>
                        <TextView
                            android:id="@+id/jumlah_kk"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="1000"
                            android:textSize="8dp"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/jumlah_dusun"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="asdasd"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/jumlah_rt"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="asdasd"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/jumlah_rw"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="asdasd"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                        <TextView
                            android:id="@+id/jumlah_suku"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:text="asdasd"
                            android:layout_weight="5"
                            android:textColor="@color/black"
                            android:textSize="8dp"
                            android:gravity="center_horizontal"/>
                    </TableRow>
                </TableLayout>
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal">
                    <TextView
                        android:id="@+id/tanggal_dibuat"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="37dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="10sp"
                        android:textColor="#7D7979"
                        android:text="15 Jan 2021"/>
                    <TextView
                        android:id="@+id/tanggal_diupdate"
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_marginRight="25dp"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="10sp"
                        android:textColor="#7D7979"
                        android:text="15 Jan 2021"/>

                    <Button
                        android:id="@+id/button_edit_desa"
                        android:layout_width="40sp"
                        android:layout_marginRight="5sp"
                        android:layout_height="match_parent"
                        android:text="Delete"
                        android:textSize="7sp"
                        android:textColor="@color/white"
                        android:background="#D9534F"/>
                    <Button
                        android:id="@+id/button_delete_desa"
                        android:layout_width="40sp"
                        android:text="Edit"
                        android:textSize="7sp"
                        android:textColor="@color/white"
                        android:layout_height="match_parent"

                        android:background="@drawable/button"/>
                </LinearLayout>
            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>