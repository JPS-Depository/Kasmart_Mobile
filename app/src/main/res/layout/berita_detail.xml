<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <TextView
    android:id="@+id/berita_detail_judul"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="15sp"
    android:fontFamily="@font/source_sans_pro"
    android:text="@string/judul_berita_detail_placeholder"
    android:textAlignment="center"
    android:textColor="@color/black"
    android:textSize="20sp"
    android:textStyle="bold" />

    <ImageView
    android:id="@+id/berita_detail_gambar"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:layout_gravity="center"
    android:background="@mipmap/ic_launcher" />

    <LinearLayout
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="20dp"
    android:layout_marginHorizontal="10sp"
    android:orientation="horizontal">

    <TextView
        android:id="@+id/penulis"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:textSize="10sp"
        android:fontFamily="@font/source_sans_pro"
        android:text="Ditulis oleh"
        android:textStyle="normal"/>

    <TextView
        android:id="@+id/tanggal_berita_detail"
        android:gravity="right"
        android:fontFamily="@font/source_sans_pro"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:text="Tanggal Berita"
        android:textColor="#40A040"
        android:textSize="10sp"
        android:textStyle="normal"/>
    </LinearLayout>

    <TextView
    android:text="@string/berita_detail_default_text"
    android:scrollbars = "vertical"
    android:layout_marginHorizontal="10sp"
    android:layout_marginBottom="10sp"
    android:id="@+id/berita_detail_text"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:fontFamily="@font/source_sans_pro"
    android:textColor="@color/black"
    android:textSize="12sp"
    android:textStyle="normal" />
</LinearLayout>
