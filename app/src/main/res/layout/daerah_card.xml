<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="200dp"
    android:layout_height="wrap_content"
    android:layout_marginLeft="5dp"
    android:layout_marginTop="15dp"
    android:layout_marginRight="5dp"
    android:elevation="8dp"
    app:cardBackgroundColor="@color/white"
    app:cardCornerRadius="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="130dp"
        android:elevation="3dp"
        android:orientation="vertical"
        android:padding="16dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <TextView
                android:id="@+id/nama_daerah"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:fontFamily="@font/source_sans_pro"
                android:text="Nama Daerah"
                android:textColor="#000"
                android:textSize="13sp"
                android:textStyle="bold" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:orientation="vertical"
                    android:layout_marginEnd="12dp"
                    android:layout_weight="1">

                    <TextView
                        android:id="@+id/jenisDaerah"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:fontFamily="@font/source_sans_pro"
                        android:textSize="11sp"
                        android:ellipsize="end"
                        android:text="Kode Daerah"/>

                    <TextView
                        android:id="@+id/kodeDaerah"
                        android:fontFamily="@font/source_sans_pro"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:textSize="9sp"
                        android:maxLines= "2"
                        android:ellipsize="end"
                        android:text="Kode Daerah"/>

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_height="20dp"
                        android:gravity="bottom"
                        android:layout_weight="1">

                        <Button
                            android:id="@+id/button_delete_daerah"
                            android:layout_width="40sp"
                            android:layout_height="20sp"
                            android:layout_toRightOf="@id/button_edit_daerah"
                            android:background="#D9534F"
                            android:text="Delete"
                            android:textColor="@color/white"
                            android:textSize="7sp" />

                        <Button
                            android:id="@+id/button_edit_daerah"
                            android:layout_width="40sp"
                            android:layout_height="20sp"
                            android:layout_marginRight="5sp"
                            android:background="@drawable/button"
                            android:text="Edit"
                            android:textColor="@color/white"
                            android:textSize="7sp" />
                    </RelativeLayout>
                </LinearLayout>
                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:background="@mipmap/ic_launcher"
                    android:contentDescription="Logo daerah" />

            </LinearLayout>
        </LinearLayout>
    </LinearLayout>
</androidx.cardview.widget.CardView>